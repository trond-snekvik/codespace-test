{
        "image": "ubuntu:latest",
        "features": {
          "./nrf-connect": {
            "projectType": "workspace"
          }
        },
        "customizations": {
                "vscode": {
                        "extensions": [
                                "nordic-semiconductor.nrf-connect-extension-pack"
                        ],
                        "settings": {
                                "nrf-connect.topdir": "/workdir",
                                "nrf-connect.toolchain.path": "PATH"
                        }
                }
        }
}
